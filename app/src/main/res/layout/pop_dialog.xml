<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitle"
            style="@style/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/main_tabbar_line" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:minHeight="90dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="90dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/tabbar_text_select"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_tabbar_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_pressed" >

        <Button
            android:id="@+id/btnCancel"
            style="@style/dialog_bottom_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_group"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/tabbar_text_select" />

        <View
            android:id="@+id/line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/main_tabbar_line" />

        <Button
            android:id="@+id/btnDetermin"
            style="@style/dialog_bottom_button"
            android:background="@drawable/btn_bg_group"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/tabbar_text_select" />
    </LinearLayout>

</LinearLayout>