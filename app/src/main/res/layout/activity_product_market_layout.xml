<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:visibility="visible">

        <!-- <include layout="@layout/go_back" /> -->

        <TextView
            android:id="@+id/tv_back"
            style="@style/new_comm_range_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/title_back"
            android:paddingLeft="10dip"
            android:text="返回" />

        <TextView
            android:id="@+id/tv_close"
            style="@style/new_comm_range_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_back"
            android:paddingLeft="10dip"
            android:text="关闭"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/new_comm_midd_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:src="@drawable/btn_camera_send_message"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/icon_right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:src="@drawable/btn_camera_send_message"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right1"
                style="@style/new_comm_range_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:text="行业筛选"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right2"
                style="@style/new_comm_range_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:text="行业筛选"
                android:visibility="gone" />

            <TextView
                android:id="@+id/right_text"
                style="@style/new_comm_range_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:visibility="gone" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/pb_loading"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:max="100"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar"
            android:visibility="gone"></ProgressBar>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#bbbbbb"
            android:visibility="visible" />
    </RelativeLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>